<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:rowCount="4"
    android:columnCount="2"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_columnSpan="2"
        android:id="@+id/currentWeather"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/currentWeather2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="150dp"
        android:text="2O Celsius"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="Current Temperature" />
    <TextView
        android:id="@+id/minWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Celsius"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="Min Temperature" />
    <TextView
        android:id="@+id/maxWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 Celsius" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="Max Temperature" />

    <TextView
        android:id="@+id/uvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UV cheese" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="UV Rating" />


    <ProgressBar
        android:layout_columnSpan="2"
        android:id="@+id/simpleProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"/>


</GridLayout>